package pkg

pred vIsOne(v int) {
    v == 1
}

func main() {
  c := make(chan int)
  c.Init(vIsOne!<_!>, PredTrue!<!>)
  go foo(1, c)

  fold PredTrue!<!>()
  res, ok := <- c
  if (ok) {
    unfold vIsOne!<_!>(res)
    assert res == 1
  }
}

requires acc(c.SendChannel(), 1/2)
requires c.SendGivenPerm() == vIsOne!<_!>;
requires c.SendGotPerm() == PredTrue!<!>;
requires v == 1
func foo(v int, c chan int) {
    fold vIsOne!<_!>(v)
    c <- v
}
